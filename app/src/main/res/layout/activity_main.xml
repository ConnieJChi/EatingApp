<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.eatingapp.MainActivity">

    <ImageView
        android:id="@+id/EatingPicture"
        android:layout_width="wrap_content"
        android:layout_height="400sp"
        android:src="@drawable/before_cookie" />

    <RelativeLayout
        android:layout_below="@+id/EatingPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff99cc">
        <TextView

            android:id="@+id/Full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feed me!"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eat"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/Full"
            android:onClick="clicked"/>
    </RelativeLayout>


</RelativeLayout>

